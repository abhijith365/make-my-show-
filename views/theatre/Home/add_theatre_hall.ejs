                        <div class="row">
                            <h3> Upload Ticket</h3>
                            <form class="ticket-form col-12" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="input-field col-12">
                                        <input id="name" type="text" class="validate">
                                        <label for="name">Event Name</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col-12">
                                        <input id="location" type="text" class="validate">
                                        <label for="location">Location</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col-4">
                                        <input id="date" type="date" class="validate">
                                        <label for="date"></label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col-6">
                                        <textarea id="description" class="materialize-textarea"></textarea>
                                        <label for="Description">Description</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <h5>More Price Fields</h5>
                                    </div>
                                    <div class="col-6">
                                        <a class="btn-floating btn-large waves-effect waves-light red" id="addField"><i
                                                class="mdi mdi-plus"></i></a>
                                    </div>

                                </div>
                                <div class="wrapper">

                                    <div class="row">
                                        <div class="input-field col-4">
                                            <input name="priceClass[]" type="text" class="validate">
                                            <label for="priceClass[]">Class</label>
                                        </div>
                                        <div class="input-field col-4">
                                            <input name="priceAmount[]" type="text" class="validate">
                                            <label for="priceAmount[]">Price</label>
                                        </div>

                                        <div class="input-field col-4">
                                            <h6>Input Price Classes and Amounts.</h6>
                                        </div>
                                    </div>

                                    <br>
                                </div>
                                <br>
                                <div class="row">
                                    <div>
                                        <button class="waves-effect waves-light btn" type="submit">Upload</button>
                                    </div>
                                </div>
                            </form>
                        </div>
