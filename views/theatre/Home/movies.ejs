            font-size: 14px;
        }

        .movie__details {
            display: flex;
            margin: auto;
        }

        .movie__detail {
            font-size: 13px;
            margin-right: 20px;
            display: flex;
            align-items: center;
        }

        .icons i {
            margin-right: 3px;
            font-size: 18px;
        }

        .icons-red {
            color: salmon;
        }

        .icons-grey {
            color: grey;
        }

        .icons-yellow {
            color: rgb(190, 190, 71);

        }
